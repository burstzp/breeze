{
    "listen" : "0.0.0.0:80",
    "daemonize" : true,
    "logfile" : "/var/log/breeze.log",
    "pidfile" : "/var/run/breeze.pid",

    "sites" : [{
        "host" : "www.bar.com",
        "locations" : [{
            "path": "/",
            "module": "static",
            "root": "/var/www/bar.com",
            "expires": "480",
            "list_dir": true,
            "gzip": true
        }]
    }, {
        "host" : "jerrypeng.me",
        "locations" : [{
            "path": "~ .*\\.(png|jpg|jpeg|gif|css)",
            "module": "static",
            "root": "/var/www/jerrypeng.me",
            "expires": "24",
            "list_dir": true,
            "gzip": true
        }]
    }]
}
